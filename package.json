{
  "name": "vroom-engine-design-system-catalog",
  "version": "0.1.0",
  "description": "Figma plugin for browsing and placing components from multiple design systems",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"yarn build:canvas --watch\" \"yarn build:plugin --watch\"",
    "build": "yarn build:canvas && yarn build:plugin",
    "build:canvas": "vite build -c ./vite.config.canvas.ts",
    "build:plugin": "vite build -c ./vite.config.plugin.ts",
    "validate-catalog": "tsx tools/validate-catalog.ts",
    "extract-catalog": "tsx tools/extract-catalog/extractor.ts",
    "test": "vitest run",
    "lint": "eslint . --ext .ts,.tsx"
  },
  "dependencies": {
    "fuse.js": "^7.0.0",
    "prettier": "^3.8.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-highlight-words": "^0.21.0",
    "reshaped": "^3.9.0",
    "tsconfig-paths": "^4.2.0",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@adobe/react-spectrum": "^3.46.1",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@figma/plugin-typings": "^1.98.0",
    "@mui/material": "^7.3.7",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@types/react-highlight-words": "^0.20.1",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitejs/plugin-react": "^5.1.3",
    "concurrently": "^8.2.2",
    "esbuild": "^0.27.3",
    "eslint": "^8.57.0",
    "glob": "^11.1.0",
    "jsdom": "^28.0.0",
    "playwright": "^1.58.2",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.7.0",
    "typescript": "^5.5.0",
    "vite": "^7.3.1",
    "vite-plugin-generate-file": "^0.3.1",
    "vite-plugin-singlefile": "^2.3.0",
    "vite-tsconfig-paths": "^6.0.5",
    "vitest": "^2.0.0"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always",
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "bracketSpacing": true
  }
}
