{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "DesignSystemCatalogEntry",
  "description": "Schema for a single design system catalog JSON file",
  "type": "object",
  "required": ["id", "name", "version", "components"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$",
      "description": "URL-safe slug identifier"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "description": "Display name"
    },
    "version": {
      "type": "string",
      "minLength": 1,
      "description": "Version string"
    },
    "description": {
      "type": "string"
    },
    "sourceUrl": {
      "type": "string",
      "format": "uri"
    },
    "logoUrl": {
      "type": "string"
    },
    "components": {
      "type": "array",
      "items": { "$ref": "#/$defs/Component" },
      "minItems": 1
    }
  },
  "$defs": {
    "Component": {
      "type": "object",
      "required": ["id", "name", "category", "previewUrl", "html"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$"
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "aliases": {
          "type": "array",
          "items": { "type": "string" }
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "enum": ["input", "display", "navigation", "feedback", "layout", "surface"]
        },
        "previewUrl": {
          "type": "string"
        },
        "html": {
          "type": "string",
          "minLength": 1,
          "description": "Pre-processed HTML with inlined styles"
        },
        "props": {
          "type": "array",
          "items": { "$ref": "#/$defs/ComponentProp" }
        },
        "variants": {
          "type": "array",
          "items": { "$ref": "#/$defs/ComponentVariant" }
        }
      }
    },
    "ComponentProp": {
      "type": "object",
      "required": ["name", "type"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "type": {
          "type": "string",
          "enum": ["boolean", "enum", "string", "number"]
        },
        "description": {
          "type": "string"
        },
        "defaultValue": {
          "type": "string"
        },
        "values": {
          "type": "array",
          "items": { "$ref": "#/$defs/PropValue" }
        }
      },
      "if": {
        "properties": { "type": { "const": "enum" } }
      },
      "then": {
        "required": ["values"],
        "properties": {
          "values": { "minItems": 1 }
        }
      }
    },
    "PropValue": {
      "type": "object",
      "required": ["value"],
      "properties": {
        "value": {
          "type": "string",
          "minLength": 1
        },
        "label": {
          "type": "string"
        },
        "previewUrl": {
          "type": "string"
        }
      }
    },
    "ComponentVariant": {
      "type": "object",
      "required": ["name", "props"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "props": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        },
        "previewUrl": {
          "type": "string"
        },
        "html": {
          "type": "string"
        }
      }
    }
  }
}
